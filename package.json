{
  "name": "wolfram.kriesing.de",
  "version": "2.0.0",
  "description": "my site, about tech and non-tech",
  "browser": {
    "react": "./src/shim/react.js"
  },
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-register src/*spec.js src/**/*spec.js --bail --reporter=dot --slow=1",
    "watch:test": "npm run test -- --watch",
    "start": "concurrently 'npm run _start:assets' 'npm run _start:js' 'npm run _start:html' 'npm run _start:content'",
    "_start:assets": "chokidar --initial 'src/assets/**/*' -c 'npm run _build:assets'",
    "_start:content": "chokidar --initial 'content/**/*' -c 'npm run _build:content'",
    "_start:html": "chokidar --initial 'src/index.html' -c 'npm run _build:html'",
    "_start:js": "mkdir -p dist; watchify --transform=babelify --outfile=dist/index.js src/index.js --verbose",
    "prebuild": "mkdir -p dist/assets; mkdir -p dist/content",
    "build": "npm run _build:js && npm run _build:assets && npm run _build:html && npm run _build:content",
    "_build:js": "browserify src/index.js --transform=babelify --outfile=dist/index.js",
    "_build:assets": "rm -r dist/assets; cp -r src/assets dist/assets",
    "_build:content": "rm -r dist/content; cp -r content dist/content",
    "_build:html": "rm -r dist/*.html; cp -r src/*.html dist"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/wolframkriesing/wolfram.kriesing.de.git"
  },
  "author": "Wolfram Kriesing",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wolframkriesing/wolfram.kriesing.de/issues"
  },
  "homepage": "https://github.com/wolframkriesing/wolfram.kriesing.de",
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-plugin-transform-react-jsx": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chokidar": "^1.4.3",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^2.0.0",
    "hamjest": "^2.13.0",
    "isomorphic-fetch": "^2.2.1",
    "marked": "^0.3.5",
    "mocha": "^2.4.5",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "watchify": "^3.7.0"
  }
}
